    {{#if (emptyObject messages)}}
        {{> flashmessage}}
    {{/if}}
    <h1>Metabooth</h1>

</header>
{{>nav}}
{{{body}}}
{{>footer}}

{{#if logged}}
    <script>
        let ele = document.getElementById("logout-button");
        console.log("got logout-button");
        if (ele) {
            ele.onclick = (even) => {
                console.log("button clicked");
                fetch('/users/logout', {
                    method: "post"
                })
                        .then((data) => {
                            location.replace("/");
                        })
            }
        }
    </script>
{{/if}}
</body>
</html>
