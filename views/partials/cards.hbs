<div id="post-{{id}}" class="card">
    <img class="card-image" src="{{thumbnail}}" alt="">
    <div>
        <p class="card-title">
            {{title}}
        </p>
        <p class="card-text">
            {{description}}
        </p>
        <a href="/post/{{id}}" class="anchor-buttons">Post Details</a>
    </div>
</div>

